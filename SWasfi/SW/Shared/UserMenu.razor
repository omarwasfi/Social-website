@using Microsoft.AspNetCore.Identity



<li @onclick="ToggleMenu" class="nav-item dropdown no-arrow" role="presentation">
    <div class=@MainDivCssClass>
        <a class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded=@MainLinkAriaExpanded>
            <span class="d-none d-lg-inline mr-2 text-gray-600 small">Valerie Luna</span>
            <img class="border rounded-circle img-profile" src="img/avatars/avatar1.jpeg">
        </a>
        <div class=@LinkDivCssClass role="menu">
            <a class="dropdown-item" role="presentation" href="/profile"><i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Profile</a>
            <a class="dropdown-item" role="presentation" href="#"><i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Settings</a>
            <a class="dropdown-item" role="presentation" href="#"><i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Activity log</a>
            <div class="dropdown-divider">
            </div>
            <form method="post" action="Identity/Account/LogOut">
                <button type="submit" class="btn btn-link">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                    &nbsp;Logout
                </button>
            </form>

        </div>
    </div>
</li>

@code {
    private bool ShowMenu = false;

    private string MainDivCssClass => ShowMenu ? "nav-item dropdown no-arrow show" : "nav-item dropdown no-arrow";

    private string MainLinkAriaExpanded => ShowMenu ? "True" : "False";

    private string LinkDivCssClass => ShowMenu ? "dropdown-menu shadow dropdown-menu-right animated--grow-in show" : "dropdown-menu shadow dropdown-menu-right animated--grow-in";



    private void ToggleMenu()
    {
        ShowMenu = !ShowMenu;
    }

