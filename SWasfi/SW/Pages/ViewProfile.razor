@page "/viewprofile"
@page "/viewprofile/{Username}"
@using SW.Areas.Identity.Data;
@using SW.DBServices.Interfaces;
@using SW.Components.ViewProfile
@inject IPersonDataService PersonData

<h3 class="text-dark mb-4">Profile</h3>
<div class="row mb-3">

    @if (Person != null)
    {
        <ViewProfilePictureCard Person="Person" />
        <ViewProfileInformaionCard Person="Person"/>
    }

    

</div>

@code {

    [Parameter]
    public string Username { get; set; }

    private Person Person { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Person = await PersonData.GetPersonById(Username);
    }


}
